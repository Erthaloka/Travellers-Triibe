# ===========================================
# Travellers Triibe Backend Configuration
# ===========================================

# Server
PORT=3000
NODE_ENV=development

# ===========================================
# MongoDB Atlas
# ===========================================
# Get from: MongoDB Atlas → Database → Connect → Drivers
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/travellers-triibe?retryWrites=true&w=majority

# ===========================================
# Firebase Auth
# ===========================================
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./travellers-triibe-firebase-adminsdk-fbsvc-c5f6474fd0.json

# ===========================================
# Supabase (for storage/realtime features)
# ===========================================
# Get from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# JWT (for backend tokens)
# ===========================================
# Generate a random 32+ character string
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars
JWT_EXPIRES_IN=7d

# ===========================================
# Razorpay
# ===========================================
# Get from: Razorpay Dashboard → Settings → API Keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# App Settings
# ===========================================
DISCOUNT_RATE_DEFAULT=5
MAX_DISCOUNT_RATE=15




